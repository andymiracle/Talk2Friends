<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.talk2friends">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Talk2Friends"
        tools:targetApi="31">
        <activity
            android:name=".MeetingInfoActivity"
            android:exported="false" />
        <activity
            android:name=".EditProfileActivity"
            android:exported="false" />
        <activity
            android:name=".ViewFriendsActivity"
            android:exported="false" />
        <activity
            android:name=".InviteFriendsActivity"
            android:exported="false" />
        <activity
            android:name=".AddFriendsActivity"
            android:exported="false" />
        <activity
            android:name=".JoinMeetingActivity"
            android:exported="false" />
        <activity
            android:name=".YourMeetingActivity"
            android:exported="false" />
        <activity
            android:name=".MainMeetingActivity"
            android:exported="false" />
        <activity
            android:name=".ProfileCreationActivity"
            android:exported="false" />
        <activity
            android:name=".CreateMeetingActivity"
            android:exported="false" />
        <activity
            android:name=".MainPageActivity"
            android:exported="false" />
        <activity
            android:name=".FriendsActivity"
            android:exported="false" />
        <activity
            android:name=".ProfileActivity"
            android:exported="false" />
        //https://developer.android.com/training/app-links
        <activity
            android:name=".SignUpActivity"
            android:exported="true" >
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:host="www.talk2friends.com"/>
                <data
                    android:scheme="http" />
                <data
                    android:scheme="https" />
                <data
                    android:pathPrefix="/signup" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>